<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BabyTech.Pages.QPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="5">
            <Label Text="Patient Information" FontSize="25" TextColor="#00C5FA"></Label>
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="First Name"></Entry>
                <Entry Placeholder="Last Name"></Entry>
            </StackLayout>
            <Entry Placeholder="Street Address"></Entry>
            <Entry Placeholder="City"></Entry>
            <Entry Placeholder="State"></Entry>
            <Entry Placeholder="Country"></Entry>
            <Entry Placeholder="Hospital Name"></Entry>
            <Editor Placeholder="Write any observations..."></Editor>
                <Picker>
                <Picker.Items SelectedIndex="0">
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                    <x:String>Other</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Register Case" BackgroundColor="#00C5FA" TextColor="#FFF" Clicked="RegisterCase_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>